{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pavel/assert": ["packages/assert/src/index.ts"],
      "@pavel/bubbler-core": ["packages/bubbler-core/src/index.ts"],
      "@pavel/chart": ["packages/chart/src/index.ts"],
      "@pavel/comparator-shared": ["packages/comparator-shared/src/index.ts"],
      "@pavel/components": ["packages/components/src/index.ts"],
      "@pavel/easing": ["packages/easing/src/index.ts"],
      "@pavel/mindmap-ui": ["packages/mindmap-ui/src/index.ts"],
      "@pavel/observable": ["packages/observable/src/index.ts"],
      "@pavel/react-utils": ["packages/react-utils/src/index.ts"],
      "@pavel/redux-slice": ["packages/redux-slice/src/index.ts"],
      "@pavel/scheduling": ["packages/scheduling/src/index.ts"],
      "@pavel/trading": ["packages/trading/src/index.ts"],
      "@pavel/types": ["packages/types/src/index.ts"],
      "@pavel/utils": ["packages/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
