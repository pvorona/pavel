# Build the docker image with `npx nx docker-build bubbler-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t bubbler-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system bubbler-server && \
          adduser --system -G bubbler-server bubbler-server

COPY dist/packages/bubbler-server bubbler-server
RUN chown -R bubbler-server:bubbler-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix bubbler-server --omit=dev -f install

CMD [ "node", "bubbler-server" ]
