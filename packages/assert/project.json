{
  "name": "assert",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/assert/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/assert",
        "main": "packages/assert/src/index.ts",
        "tsConfig": "packages/assert/tsconfig.lib.json",
        "assets": ["packages/assert/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/assert/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/assert"],
      "options": {
        "jestConfig": "packages/assert/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
